# ---
# PANDOC
# ---

macro compose Y \
"<enter-command>set pipe_decode<enter>\
<first-entry>\
<pipe-entry>pandoc -s -f markdown+hard_line_breaks+autolink_bare_uris-blank_before_blockquote --self-contained --variable=pagetitle:'message' -o ~/msg.html --resource-path $HOME/.dotfiles/shared/files/mutt/templates/ --template email <enter>\
<enter-command>unset pipe_decode<enter>\
<attach-file>~/msg.html<enter>\
<toggle-disposition><toggle-unlink>\
<tag-entry><first-entry><tag-entry><group-alternatives><send-message>" \
"Convert markdown to HTML5 and plaintext alternative content types and send message"

macro compose m \
"<enter-command>set pipe_decode<enter>\
<first-entry>\
<pipe-entry>pandoc -s -f markdown+hard_line_breaks+autolink_bare_uris-blank_before_blockquote --self-contained --variable=pagetitle:'message' -o ~/msg.html --resource-path $HOME/.dotfiles/shared/files/mutt/templates/ --template email <enter>\
<enter-command>unset pipe_decode<enter>\
<attach-file>~/msg.html<enter>\
<toggle-disposition><toggle-unlink>\
<tag-entry><first-entry><tag-entry><group-alternatives>" \
"Convert markdown to HTML5 and plaintext alternative content types and send message"

# ---
# NAVIGATION
# ---

# advanced
macro index o "<shell-escape>mbsync -a<enter>" "run mbsync to sync mail"
bind index,pager V noop
macro index,pager V "<view-attachments><search>html<enter><view-mailcap><exit>"
macro index,pager A "<save-message>=Archive<enter><sync-mailbox>" "Archive message"
macro index \Cf "<enter-command>unset wait_key<enter><shell-escape>printf 'Enter a search term to find with notmuch: '; read x; echo \$x >~/.cache/mutt_terms<enter><limit>~i \"\`notmuch search --output=messages \$(cat ~/.cache/mutt_terms) | head -n 600 | perl -le '@a=<>;s/\^id:// for@a;$,=\"|\";print@a' | perl -le '@a=<>; chomp@a; s/\\+/\\\\+/ for@a;print@a' \`\"<enter>" "show only messages matching a notmuch pattern"

