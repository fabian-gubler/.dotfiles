# vi: ft=muttrc

source /data/.dotfiles/modules/files/mutt/colors
source /data/.dotfiles/modules/files/mutt/macros
source /data/.dotfiles/modules/files/mutt/notmuch
source /data/.dotfiles/modules/files/mutt/variables| # pipe indicates executable

# options
set query_command = "khard email --parsable --search-in-source-files '%s'"
set from = "fabian.gubler@conactive.ch"
set folder = "~/Mail"
set edit_headers = yes
set charset = "utf-8"
set send_charset = "us-ascii:utf-8"
set recall=no
set spoolfile = +INBOX
set postponed = +Drafts
set trash = +Trash
set record = +Sent
set confirmappend = no
set sidebar_visible = yes
set forward_format = "Fwd: %s"	# format of subject when forwarding
set forward_decode              # decode when forwarding
set forward_quote				# include message in forwards
unset mime_forward				# forward attachments as part of body
set include						# include message in replies
auto_view text/html				# automatically show html (mailcap uses lynx)
set editor = 'nvim'
set sort = 'reverse-date'
set mailcap_path = /data/.dotfiles/modules/files/mutt/mailcap
set sidebar_width = 20
mailboxes "=INBOX" "=Sent" "=Trash" "=Spam" "=Archive" "=Drafts" 

set smtp_url = smtp://fabian.gubler@conactive.ch@outlook.office365.com:587/
set ssl_starttls = yes

set smtp_pass = "$conactive_pass"
set imap_pass = "$conactive_pass"
# set imap_user = "gubler@fastmail.com"
# set sendmail = "msmtp -a gubler@fastmail.com"


# bindings
bind editor <Tab> complete-query

# added
bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CO sidebar-open
