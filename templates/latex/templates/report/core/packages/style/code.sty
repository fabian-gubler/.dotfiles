        stringstyle=\color{redstrings},
        numberstyle=\color{graynumbers},
        basicstyle=\ttfamily\footnotesize,
        frame=l,
        framesep=12pt,
        xleftmargin=12pt,
        tabsize=4,
        captionpos=b
    }

